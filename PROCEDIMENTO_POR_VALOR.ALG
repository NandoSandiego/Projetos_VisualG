algoritmo "Procedimento_por_valor"

//O valor é jogado diretamente na instancia

var

numero: inteiro


Procedimento ParOuImpar(valor: inteiro)

Inicio

      Se (valor % 2 = 0) entao
         EscrevaL("O número é PAR")
      Senao
           EscrevaL("O número é IMPAR")
      FimSe
      

FimProcedimento

inicio

Escreva("Digite um número: ")
leia(numero)

ParOuImpar(numero)




fimalgoritmo